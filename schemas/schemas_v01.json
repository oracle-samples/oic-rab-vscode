{
  "_comment": "Copyright (c) 2022-2024, Oracle and/or its affiliates. All rights reserved. This software is licensed to you under the Universal Permissive License (UPL) 1.0 as shown at https://oss.oracle.com/licenses/upl.",
  "$id": "#schemas",
  "title": "Schemas",
  "description": "Schema of Schema",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z][a-zA-Z0-9\\.\\-_]{0,100}$": {
      "$ref": "#/definitions/Schema"
    }
  },
  "additionalProperties": false,
  "minProperties": 0,
  "maxProperties": 600,
  "definitions": {
    "Schema": {
      "oneOf": [
        {
          "$ref": "#/definitions/BasicSchema"
        },
        {
          "$ref": "#/definitions/PolymorphicSchema"
        }
      ]
    },
    "BasicSchema": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "array",
            "boolean",
            "integer",
            "number",
            "object",
            "string"
          ]
        },
        "title": {
          "type": "string",
          "maxLength": 100
        },
        "description": {
          "type": "string",
          "maxLength": 1000
        },
        "format": {
          "type": "string",
          "enum": [
            "binary"
          ]
        },
        "xml": {
          "$ref": "#/definitions/XMLObject"
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "items": {
          "oneOf": [
            {
              "$ref": "#/definitions/BasicSchema"
            },
            {
              "$ref": "#/definitions/Reference"
            },
            {
              "$ref": "#/definitions/PolymorphicSchema"
            }
          ]
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "oneOf": [
              {
                "$ref": "#/definitions/BasicSchema"
              },
              {
                "$ref": "#/definitions/Reference"
              },
              {
                "$ref": "#/definitions/PolymorphicSchema"
              }
            ]
          },
          "minProperties": 1
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "type": "object",
            "properties": {
              "type": {
                "const": "array"
              }
            },
            "required": ["type"]
          },
          "then": {
            "required": [
              "items"
            ]
          }
        },
        {
          "if": {
            "type": "object",
            "properties": {
              "type": {
                "const": "object"
              }
            },
            "required": ["type"]
          },
          "then": {
            "properties": {
              "properties": {
                "minProperties": 1
              }
            },
            "required": [
              "properties"
            ]
          }
        }
      ]
    },
    "Reference": {
      "type": "object",
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "type": "string",
          "pattern": "^#/schemas/[\\w|-]+$",
          "maxLength": 100
        }
      },
      "additionalProperties": false
    },
    "Discriminator": {
      "type": "object",
      "required": [
        "propertyName"
      ],
      "properties": {
        "propertyName": {
          "description":"The name of the property in the payload that will hold the discriminator value.",
          "type": "string"
        },
        "mapping": {
          "description":"An object to hold mappings between payload values and schema names or references.",
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z][a-zA-Z0-9\\.\\-_]{0,100}$": {
              "type": "string",
              "pattern": "#/schemas/[a-zA-Z0-9\\.\\-_]{0,100}$"
            }
          }
        }
      },
      "additionalProperties": false
    },
    "XMLObject": {
      "type": "object",
      "properties": {
        "type": {
          "description": "Declares XML Object type, using for overriding parent object type.",
          "type": "string"
        },
        "attribute": {
          "description": "Declares whether the property definition translates to an attribute instead of an element. Default value is false.",
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "PolymorphicSchema": {
      "type": "object",
      "properties": {
        "allOf": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference"
          }
        },
        "oneOf": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference"
          }
        },
        "anyOf": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference"
          }
        },
        "discriminator": {
          "$ref": "#/definitions/Discriminator"
        }
      },
      "additionalProperties": false,
      "oneOf": [
        {
          "properties": {
            "oneOf": {
            },
            "discriminator": {
            }
          },
          "additionalProperties": false
        },
        {
          "properties": {
            "anyOf": {
            },
            "discriminator": {
            }
          },
          "additionalProperties": false
        },
        {
          "properties": {
            "allOf": {
            },
            "discriminator": {
            }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}